{
    "include": [
        "./src",
    ],
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ESNext",
        "allowJs": true,
        "moduleResolution": "node",
        "declaration": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
    },
}